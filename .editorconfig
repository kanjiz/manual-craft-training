# トップレベルの .editorconfig ファイル
root = true

# すべてのファイルに対するデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown ファイル用の設定
[*.md]
trim_trailing_whitespace = false

# Python ファイル用の設定
[*.py]
indent_size = 4

# JavaScript ファイル用の設定
[*.{js,jsx,ts,tsx}]
indent_size = 2